{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend/src",
      "command": "nvm use v20.9.0 && yarn dev",
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "env": {
        "NODE_VERSION": "20" // 환경 변수를 통해 Node 버전 제어 가능
      }
    }
  ]
}